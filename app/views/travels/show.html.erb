<h1>Travel Show</h1>

<% t = @travel %>
<div class="travel_item">
  <div class="travel_item_img">
    <img src="<%=getStreetViewUrl(t.start_latitude, t.start_longitude)%>" alt="Travel starting position image">
  </div>

  <div class="travel_item_body">
    <div class="travel_item_name">
      <div><%= t.name %></div>
      <div>
      </div>
    </div>
    <div class="travel_item_from_info">
      <p>Start: <%= t.start_name %></p>
      <p><%= t.start_latitude %></p>
      <p><%= t.start_longitude %></p>
    </div>
    <div class="travel_item_end_info">
      <p>End: <%= t.end_name %></p>
      <p><%= t.end_latitude %></p>
      <p><%= t.end_longitude %></p>
    </div>
  </div>

  <div class="travel_item_img">
    <img src="<%=getStreetViewUrl(t.end_latitude, t.end_longitude)%>" alt="Travel ending position image">
  </div>

  <div class="travel_item_introduction">
    <h4>Introduction: </h4>
    <%= t.introduction %>
  </div>
</div>

<div class="map center" id="travel_streetview">
<img src="" alt="street view" id='travel_map_image' />
<div id="travel_lat_lon">
  <div class="strike">latitude: <span id="travel_lat"><%=@travel.start_latitude.to_s%></span> </div>
  <div class="strike">longitude: <span id="travel_lon"><%=@travel.start_longitude.to_s%></span> </div>
  <div class="strike">heading: <span id="travel_heading">0</span> </div>
  <div class="strike">pitch: <span id="travel_pitch">0</span> </div>
  <div class="hidden">latitude: <span id="travel_end_lat"><%=@travel.end_latitude.to_s%></span> </div>
  <div class="hidden">longitude: <span id="travel_end_lon"><%=@travel.end_longitude.to_s%></span> </div>
</div>

<div class="hidden" id="travel_map_ctrl">
  <div class="map_ctrl_item" id="travel_map_ctrl_turnleft">⟲</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_forward">↑</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_turnright">⟳</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_moveleft">←</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_none"></div>
  <div class="map_ctrl_item" id="travel_map_ctrl_moveright">→</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_enlarge">+</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_backward">↓</div>
  <div class="map_ctrl_item" id="travel_map_ctrl_shrink">-</div>
</div>

<div id="travel_compass">
  <div id="travel_uparrow"></div>
  <div id="travel_downarrow"></div>
</div>
</div>

<div class="travel_play_ctrl">
  <div>
    <div class="little_button hidden" id="travel_play">
      <div class="play_button_face"></div>
    </div>
    <div class="little_button hidden" id="travel_pause">
      <div class="pause_button_face">
        <div></div>
        <div></div>
      </div>
    </div>
  </div>
  <div>
    <div class="little_button hidden" id="travel_stop">
      <div class="stop_button_face"></div>
    </div>
  </div>
  <div>Speed: &#160; <input type="number" name="speed" value="1" min="1" max="100" id='travel_speed'> &#160;meters/s </div>
</div>

<br>
<div class="center" id="travel_guidemap">
</div>


<script type="text/javascript">
  initShowTravelPage();
</script>
